@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)</h3>
</div>

<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-primary" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Cancelar exclusão</a>
</div>
